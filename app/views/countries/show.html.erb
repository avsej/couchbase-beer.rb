<div id="country" data-role="page">

    <div data-role="header">
        <h1>Breweries in <%= params[:id] %></h1>
        <a href="/" data-icon="home">Home</a>
        <a data-rel="back">Back</a>
    </div>

    <div data-role="content">
        <ul data-role="listview" data-filter="true" data-inset="true" data-autodivisers="true">
            <% @breweries.each do |brewery| %>
                <li>
                    <%= link_to brewery_path(brewery) do %>
                        <%= brewery.name %>
                    <% end %>
                </li>
            <% end %>
        </ul>
    </div>

</div>
